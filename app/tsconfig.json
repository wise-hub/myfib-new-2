{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "@": ["./"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["src", "server"]
}
